<% content_for :title, 'Edit expense' %>
<% content_for :back_url, url_for(@expense_item) %>

<%= form_with model: @expense_item, method: :put, url: url_for(@expense_item) do |form| %>
  <%= render partial: 'item_details_form', locals: { form: form, split_mode: 'by_amount' } %>

  <%= form.submit "Edit expense", disabled: (@expense_item.amount || 0) <= 0, class: 'btn btn-primary w-100 mt-4' %>
<% end %>